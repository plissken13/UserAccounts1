@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm", @class = "navbar-right"}))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav">
            <li class="nav-item nav-link">
                @Html.ActionLink(Resources.Global.Hello + " " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new {title = "Manage", @class = "navigation-link" })
            </li>
            <li class="nav-item nav-link">
                <a href="javascript:document.getElementById('logoutForm').submit()" class ="navigation-link">@Resources.Global.Logoff</a>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav">
        <li class="nav-item nav-link">@Html.ActionLink(Resources.Global.Register, "Register", "Account", routeValues: null, htmlAttributes: new {id = "registerLink", @class = "navigation-link"})</li>
        <li class="nav-item nav-link">@Html.ActionLink(Resources.Global.Login, "Login", "Account", routeValues: null, htmlAttributes: new {id = "loginLink", @class = "navigation-link"})</li>
    </ul>
}