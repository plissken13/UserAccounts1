@model IEnumerable<UserAccounts.Models.CampaignModel>
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "CampaignList";
}

<h2>CampaignList</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequiredSum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentSum)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", new {id = item.Id})
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.RequiredSum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentSum)
            </td>
            <td>
                @if (User.IsInRole("Admin") || User.Identity.GetUserId() == item.OwnerId)
                {
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id})
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                }
            </td>
        </tr>
    }

</table>