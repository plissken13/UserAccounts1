@model IEnumerable<UserAccounts.Models.UserListViewModel>

@{
    ViewBag.Title = "UserList";
}
@Scripts.Render("~/bundles/UserAccounts")

<meta charset="utf-8">
<div class="nav justify-content-end">
    <div class="navbar-brand">
        <button type="button" class="btn btn-success" onclick="Unlocking()">Unblock</button>
        <button type="button" class="btn btn-warning" onclick="Locking()">Block</button>
        <button type="button" class="btn btn-danger" onclick="Delete()">Delete</button>
        <button type="button" class="btn btn-secondary" onclick="SetAdminPermissions()">Set as admin</button>
        <button type="button" class="btn btn-secondary" onclick="SetUserPermissions()">Set as user</button>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            <input id="checkall" type="checkbox" />
        </th>
        <th>
            User name
        </th>
        <th>
            Status
        </th>
        <th>
            Role
        </th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            <input class="checkbox" type="checkbox" name="statuses" value="@item.Id">
        </td>
        <td>
            @Html.ActionLink(item.UserName, "UserDetails", new { id = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Role)
        </td>
    </tr>
    }

</table>